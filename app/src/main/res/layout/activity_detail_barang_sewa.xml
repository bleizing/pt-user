<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen3"
    tools:context="bleizing.punyatemenuser.DetailBarangSewaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tambah_barang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="Barang Sewa"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="25dp"
            android:text="Nama Barang"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="17sp"
            android:enabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Deskripsi"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/edDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:enabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Tanggal Mulai"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvTglMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="01 Januari 1970"/>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="-15dp"-->
        <!--android:text="___________________________________"-->
        <!--android:fontFamily="sans-serif-light"-->
        <!--android:textSize="17sp" />-->

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="-5dp"
            android:enabled="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Tanggal Berakhir"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="20dp"-->
        <!--android:layout_marginTop="-15dp"-->
        <!--android:text="___________________________________"-->
        <!--android:fontFamily="sans-serif-light"-->
        <!--android:textSize="17sp" />-->

        <TextView
            android:id="@+id/tvTglBerakhir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="01 Januari 1970"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="-5dp"
            android:enabled="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Lokasi"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/editLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:enabled="false"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">
            <!--<ImageView-->
                <!--android:id="@+id/img_foto_barang"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="200dp"-->
                <!--android:src="@mipmap/android_logo"-->
                <!--android:visibility="gone"/>-->
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_foto_barang"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@mipmap/android_logo"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="35dp"
            android:text="Tutup"
            android:textColor="@color/bg_screen3"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>
