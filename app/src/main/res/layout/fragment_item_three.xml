<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen3"
    tools:context="bleizing.punyatemenuser.ItemThreeFragment">

    <TextView
        android:id="@+id/tv_profile_anda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile Anda"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@id/tv_profile_anda"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edNamaBarang"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No ID KTP/SIM"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edNoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:inputType="number"
            android:maxLength="16"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No HP"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="+62"
            android:inputType="phone"
            android:maxLength="16"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:background="@color/white"
            android:text="Simpan"
            android:textColor="@color/bg_screen3"
            android:textSize="18dp"
            android:fontFamily="sans-serif-light" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="Log Out PunyaTemen?"
        android:fontFamily="sans-serif-light" />

</RelativeLayout>
